generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  userId          Int      @id @default(autoincrement())
  username        String  // Zorunlu alan haline getirildi
  useremail       String   @unique
  userpassword    String
  usercreateddate DateTime @default(now())

  // İlişki: Bir kullanıcıya ait birden fazla kelime olabilir.
  words           Word[]
}


model Word {
  wordId            Int      @id @default(autoincrement())
  userId            Int
  word              String
  meaning           String
  wordnotes         String?
  wordcreateddate   DateTime @default(now())
  isfavorite        Boolean  @default(false)


  user              User     @relation(fields: [userId], references: [userId])
}
