<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WordMashup</title>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/authstyle.css">
  <link rel="icon" href="/images/favicon.png" type="image/png">
</head>

<body>
  <div class="container">
    <div class="image-content">
      <img src="/images/logo.png">
    </div>
    <div class="auth-content">
      <div id="loginForm" class="form-box active">
        <div class="login-content">
          <h2 class="logintitle">GirişYap</h2>
          <form action="/login" method="POST">
            <label for="loginusername">Kullanıcıadı</label>
            <input type="text" max="10" id="loginusername" name="username" class="form-input"
              placeholder="Kullanıcıadınızıgirin">
            <label for="loginpassword">Şifre</label>
            <input type="password" id="loginpassword" name="password" class="form-input" placeholder="Şifrenizigirin">
            <button type="submit" class="auth-btn">GirişYap</button>
            <p class="toggle-text">
              Hesabınızyokmu?
              <a href="/register"
                onclick="event.preventDefault(); showRegister(); history.pushState(null, '', '/register');">KayıtOl</a>
            </p>
          </form>
          <% if (typeof message !=="undefined" && message) { %>
            <div class="flash-message">
              <%= message %>
            </div>
            <% } %>
        </div>
      </div>
      <div id="registerForm" class="form-box">
        <h2>KayıtOl</h2>
        <form action="/register" method="POST">
          <label for="registerusername">KullanıcıAdı</label>
          <input type="text" id="registerusername" name="username" class="form-input"
            placeholder="Kullanıcıadınızıgirin">
          <label for="registeremail">E-posta</label>
          <input type="email" id="registeremail" name="email" class="form-input" placeholder="E-postaadresinizigirin">
          <label for="registerpassword">Şifre</label>
          <input type="password" id="registerpassword" name="password" class="form-input" placeholder="Şifrenizigirin">
          <button type="submit" class="auth-btn">KayıtOl</button>
          <p class="toggle-text">
            Zatenhesabınızvarmı?
            <a href="/login"
              onclick="event.preventDefault(); showLogin(); history.pushState(null, '', '/login');">GirişYap</a>
          </p>
        </form>
      </div>
    </div>
  </div>
  <script>
    function showRegister() {
      document.getElementById("loginForm").classList.remove("active");
      document.getElementById("registerForm").classList.add("active");
    }
    function showLogin() {
      document.getElementById("registerForm").classList.remove("active");
      document.getElementById("loginForm").classList.add("active");
    }
    window.addEventListener('load', () => {
      if (window.location.pathname === '/register') {
        showRegister();
      } else {
        showLogin();
      }
    });
    window.addEventListener('popstate', () => {
      if (window.location.pathname === '/register') {
        showRegister();
      } else {
        showLogin();
      }
    });
  </script>
</body>

</html>